{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:dev": "nodemon --watch src --ext ts --exec 'nest start --watch'",
    "worker:dev": "nodemon --watch src --ext ts --exec 'ts-node -r tsconfig-paths/register src/worker/main.ts'",
    "start": "node dist/main.js",
    "build": "nest build",
    "worker": "ts-node -r tsconfig-paths/register src/worker/worker.ts",
    "migrate": "psql postgresql://postgres:postgres@localhost:5432/workflowdb -f src/infra/db/postgres/schema/postgres.schema.sql"
  },
  "dependencies": {
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-express": "11.1.9",
    "bullmq": "5.64.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.2.3",
    "ioredis": "5.8.2",
    "pg": "8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.12",
    "@types/node": "^20.4.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.1",
    "typescript": "5.9.3"
  }
}
